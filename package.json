{
  "name": "crunchyroll-downloader-gui",
  "version": "0.0.3",
  "description": "A cute gui application that downloads anime episodes from crunchyroll",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run clean && webpack && electron dist/main.js",
    "clean": "del-cli ./dist",
    "release": "npm run clean ./build && webpack && electron-builder -p always"
  },
  "keywords": [
    "crunchyroll",
    "downloader",
    "GUI",
    "electron",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Tenpi/Crunchyroll-Downloader-GUI"
  },
  "build": {
    "appId": "com.tenpi.crunchydl",
    "productName": "Crunchyroll Downloader GUI",
    "icon": "./assets/icon.png",
    "directories": {
      "buildResources": "assets",
      "output": "build"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "Crunchyroll Downloader GUI",
      "createDesktopShortcut": "always",
      "installerSidebar": "./assets/installer.bmp",
      "uninstallerSidebar": "./assets/installer.bmp"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraFiles": [
      "ffmpeg/**/*"
    ],
    "publish": {
      "provider": "github",
      "repo": "Crunchyroll-Downloader-GUI",
      "owner": "Tenpi",
      "releaseType": "draft"
    }
  },
  "author": "Tenpi",
  "license": "MIT",
  "devDependencies": {
    "@tenpi/tslint": "^1.1.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "css-loader": "^5.0.1",
    "del-cli": "^3.0.1",
    "electron": "^11.2.1",
    "electron-builder": "^22.9.1",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.1.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.5.1",
    "less": "^4.1.0",
    "less-loader": "^7.3.0",
    "mini-css-extract-plugin": "^1.3.5",
    "node-loader": "^1.0.2",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.18.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bootstrap": "^4.6.0",
    "crunchyroll.ts": "^0.1.7",
    "electron-store": "^7.0.1",
    "electron-updater": "^4.3.5",
    "ntsuspend": "^1.0.0",
    "react": "^17.0.1",
    "react-bootstrap": "^1.4.3",
    "react-dom": "^17.0.1",
    "react-reorder": "^3.0.0-alpha.7",
    "shade-blend-color": "^1.0.0"
  }
}
